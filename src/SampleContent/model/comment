'use strict'
const { Model, db } = require('spy-84-cms');

class Comment extends Model {

    tableName = 'comment'

    timestamps = true
    
    freezeTableName = true

    createdAt = false

    updatedAt = false

    attributes = {
        id: {
            type: this.dataTypes.INTEGER,
            autoIncrement: true,
            primaryKey: true
        },
        content: {
            type: this.dataTypes.INTEGER,
        },
    }

    constructor(db) {
        super(db)
    }
    
}   

const comment = new Comment(db);
comment.up();

module.exports = comment
