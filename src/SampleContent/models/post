'use strict'
const { Model } = require('spy-84-cms');

class Post extends Model {

    tableName = 'post'

    timestamps = true
    
    freezeTableName = true

    createdAt = false

    updatedAt = false

    attributes = {
        id: {
            type: this.dataTypes.INTEGER,
            autoIncrement: true,
            primaryKey: true
        },
        name: {
            type: this.dataTypes.STRING(220),
        },
        image: {
            type: this.dataTypes.TEXT,
        },
        short_content: {
            type: this.dataTypes.TEXT,
        },
        slug: {
            type: this.dataTypes.TEXT,
        },
        content: {
            type: this.dataTypes.TEXT,
        },
        category_new_id: {
            type: this.dataTypes.INTEGER,
        },
    }

    constructor() {
        super()
    }
    
}   

module.exports = Post.getInstance().up().use
